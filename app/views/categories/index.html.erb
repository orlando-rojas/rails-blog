<div class="large-container center-block">
  <h1>Categories</h1>

  <table>
    <thead>
      <tr>
        <th>Title</th>
        <th class="padding">Color</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @categories.each do |category| %>
        <tr>
          <td><h2><%= link_to category.title, category, class: 'text-info'%></h2></td>
          <td class="padding"><div style="background-color:<%= category.color %>;height:5px; width: 20px;"></div></td>
          <td class="padding"><%= link_to 'Edit', edit_category_path(category), class: 'btn btn-success' %></td>
          <td><%= link_to 'Destroy', category, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <%= link_to 'New Category', new_category_path, class:'btn btn-dark margin-top' %>
</div>